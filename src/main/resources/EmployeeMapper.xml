<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learnithardway.mybatis.repo.EmployeeMapper">

    <select id="findEmployee" resultType="com.learnithardway.mybatis.model.Employee">
        select id,name from Employee where
        <choose>
            <when test="name!=null and name !='' ">
                name like #{name}
            </when>
            <when test="id != null">
                id = #{id}
            </when>
        </choose>
    </select>
    <delete id="deleteEmployee">
        delete from Employee where
        <choose>
            <when test="name!=null">
                name like #{name}
            </when>
            <when test="id != null">
                id = #{id}
            </when>
        </choose>
    </delete>
    <insert id="createEmployee" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into Employee (id, name)
        values (#{id}, #{name})
    </insert>
</mapper>
